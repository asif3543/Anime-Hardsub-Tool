name: Build APK
on: [push]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - uses: subosito/flutter-action@v2
        with:
          channel: 'stable'

      # Ye step Android folder aur baaki files generate karega
      - name: Create Project Structure
        run: |
          flutter create --platforms android .
          # FFmpeg ke liye minSdkVersion 24 zaroori hai, ye command use set kar degi
          sed -i 's/minSdkVersion flutter.minSdkVersion/minSdkVersion 24/g' android/app/build.gradle

      - name: Get Dependencies
        run: flutter pub get

      - name: Build APK
        run: flutter build apk --release

      - name: Upload Artifact
        uses: actions/upload-artifact@v3
        with:
          name: AnimeHardsubTool-APK
          path: build/app/outputs/flutter-apk/app-release.apk
